{
  "coc.preferences.jumpCommand" : "vsplit",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"],
      "initializationOptions": {
        "codelenses": {
          "gc_details": false,
          "test": true,
          "tidy": true,
          "generate": true
        },
        "analyses": {
          "unreachable": true,
          "unusedparams": true
        },
        "usePlaceholders": true,
        "gofumpt": true,
        "hoverKind": "FullDocumentation",
        "experimentalPostfixCompletions": true
      }
    }
  }
}
