alias cdcopy='pwd | pbcopy'
alias cdpaste='cd `pbpaste`'

#find sql files but ignore test files and files under .svn directory
alias findsql="find . -not \( -regex '.*/test/.*' -o -regex '.*/test' -o -regex '.*/.svn/.*' -o -regex '.*/.svn' \) -name '*.sql'"

